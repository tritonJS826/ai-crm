SERVER_PORT=8000
# "dev" or "prod"
ENV_TYPE=dev
WEBAPP_DOMAIN=localhost
APP_BASE_URL=http://localhost:8000

# ============================================
# DATABASE
# ============================================
POSTGRES_USER=root
POSTGRES_PASSWORD=secret
POSTGRES_DB=mastersway_db
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@br-postgres-general:5432/${POSTGRES_DB}"

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_STARTTLS=false
SMTP_SSL=false
SMTP_SENDER_EMAIL=no-reply@example.com
SMTP_SENDER_NAME=UnifiedChat

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
# 7 days
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# META API (WhatsApp, Messenger, Instagram)
# ============================================
# Get from: https://developers.facebook.com/
META_VERIFY_TOKEN=your-verify-token
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# Facebook Messenger
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token

# Instagram (optional, can use same as Facebook)
IG_PAGE_ACCESS_TOKEN=instagram-page-access-token

# ============================================
# STRIPE PAYMENTS
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# OPENAI
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=apenapi_key_here

# ============================================
# WEBSOCKET BROADCAST ENDPOINT CONFIGURATION (False / True)
# ============================================
ENABLE_WS_BROADCAST_ENDPOINT=False

# ============================================
# WEBSOCKET IDLE TIMEOUT IN SECONDS (2 hours default)
# ============================================
WS_IDLE_TIMEOUT_SECONDS=7200